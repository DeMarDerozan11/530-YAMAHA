<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projetjavahbmcm.controller.TeacherDashboardController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label fx:id="labelBienvenue" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Bienvenue, Enseignant" />

                <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                    <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Mes Actions" />

                        <Button onAction="#handleVoirMonEmploiDuTemps" prefWidth="250.0" text="Voir mon emploi du temps"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;" />

                        <Button text="Consulter mes classes" prefWidth="250.0"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" />

                        <Button text="Signaler une anomalie" prefWidth="250.0"
                                style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-size: 14px;" />
                    </children>
                </VBox>

                <VBox spacing="15.0" style="-fx-background-color: #fff3cd; -fx-padding: 20; -fx-background-radius: 10;">
                    <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Informations" />
                        <Label text="• Vous pouvez consulter votre emploi du temps personnalisé" />
                        <Label text="• Signaler tout conflit d'horaire aux administrateurs" />
                        <Label text="• Accéder aux informations de vos classes" />
                    </children>
                </VBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnLogout" onAction="#handleLogout" text="Se Déconnecter"
                                style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>