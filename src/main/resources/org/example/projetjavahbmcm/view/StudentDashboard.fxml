<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projetjavahbmcm.controller.StudentDashboardController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Emploi du Temps - Étudiant" />

                <Label text="Votre emploi du temps s'affichera ici une fois que l'administrateur aura créé des cours pour votre classe." style="-fx-font-size: 14px;" />

                <GridPane fx:id="gridEmploiDuTemps" gridLinesVisible="true" prefHeight="300.0" style="-fx-background-color: white; -fx-border-color: #cccccc;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100.0" prefWidth="100.0" />
                        <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="40.0" prefHeight="40.0" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" />
                    </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#handleVoirEmploiDuTempsGraphique" text="Vue graphique avancée" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px;" />
                        <Button onAction="#handleLogout" text="Se Déconnecter" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10px;" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>